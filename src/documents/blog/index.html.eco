---
title: "Blog"
layout: "default"
---

<h1 class="page-header"><%= @labels['blog'] %></h1>

<div class="blog">
	<ul class="blog-list">
 	<% for posts in @posts : %>
	      <li class="blog-item">
	        <a href="<%= posts.year %>/<%= posts.path %>/">
		      	<span class="date"><%= posts.date %></span>
		      	<h4 class="tit"><%= posts.name %></h4>
		      	<p class="description"><%= posts.description %></p>
		    </a>  	
	      </li>
	    <% end %>
	</ul>
</div>	