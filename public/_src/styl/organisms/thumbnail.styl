//
// Thumbnail
//
// ==================================================

.thumbnail
  lost-center $screen-sm $space-lg no-flex

  +above('lg')
    lost-center $screen-lg no-flex

  .page-header
    lost-center $screen-sm $space-lg
    lost-flex-container column


//
// List
// ==================================================

.thumbnail-list
  lost-flex-container row


//
// Item
// ==================================================

.thumbnail-item
  justify-content flex-end
  lost-flex-container column
  position relative

  &:not(:last-child)
    margin-bottom $space-xlg

  +above('sm')
    lost-column 1/2 2 $space-xlg

  +above('lg')
    lost-column 2/6 3 $space-xlg



  // Types
  // ----------------------------------------------------

  .title
    font(h3, regular, secondary)
    margin-bottom $space

  .date
    font(h6, regular, secondary)
    color $gray
    display block
    margin-bottom $space-xs

  p
    font(p1, light)

  .picture
    border $line solid 1px
    display block
    margin-bottom $space

    img
      display block
      height 25vh
      object-fit cover
      max-width 100%

  .btn
    width 100%
