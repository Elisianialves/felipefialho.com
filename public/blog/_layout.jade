doctype
html(lang="pt-br")

  != partial("../_partials/head")

  body(class='page-#{ current.path[0] }')

    != partial("../_partials/header")


    //-
    //- Main
    //- --------------------------------------------------
    main.main(role='main')

      if current.source !== 'index' && public.blog._data

        each post, slug in public.blog._data

          article.blog-article(itemscope itemtype='http://schema.org/Blog')

            .blog-header
              picture.picture
                img(src='/assets/img/blog/cover/#{ post.cover }' alt='Crian√ßa em frente a uma lousa')

              .content
                h1 #{ post.title }
                p #{ post.description }

            .blog-inner
              .content(itemprop='text')
                != yield

              aside.comments
                != partial("../_partials/comments")

      else
        != yield

