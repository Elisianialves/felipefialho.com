//
// Content
//
// ==================================================


.content
  lost-center ($screen-sm + (40px * 2)) $space-lg no-flex


  // Types
  // --------------------------------------------------

  h1, h2, h3, h4, h5, h6
    &:first-child
      margin-top 0

  h1
    font(h1, regular, secondary)
    margin-bottom $space-md


  h2
    font(h2, regular, secondary)
    margin-top $space-lg
    margin-bottom $space


  h3
    font(h3, regular, secondary)
    color $gray
    margin-top $space-lg
    margin-bottom $space


  h4
    font(h4, bold, secondary)
    color $gray
    margin-top $space-lg
    margin-bottom $space-sm


  h5
    font(h5, bold, secondary)
    color $gray
    margin-top $space-lg
    margin-bottom $space-sm

  h6
    font(h6, bold, secondary)
    color $gray
    margin-top $space-lg
    margin-bottom $space-sm


  p
    font(p1, light)

    &.lead
      font(h2, regular)

    a
      font-weight(regular)


  ol
    font(p1, light)
    margin-top $space-md
    margin-bottom $space-md
    margin-left -40px

    li:not(:last-child)
      margin-bottom $space-sm


  ul
    font(p1, light)
    margin-top $space-md
    margin-bottom $space
    margin-left -40px

    li:not(:last-child)
      margin-bottom $space-sm

  .date
    font(h5, light)

  img
    display block
    width 100%
