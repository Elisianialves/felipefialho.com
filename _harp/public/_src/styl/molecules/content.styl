//
// Content
//
// ==================================================

.content
  lost-center ($screen-sm + (40px * 2)) $space-lg no-flex
  width 100%


  // Types
  // --------------------------------------------------

  h1, h2, h3, h4, h5, h6
    &:first-child
      margin-top 0

  > h1
    font(h1, regular, primary)
    margin-bottom ($space-text / 2)


  > h2
    font(h2, bold, primary)
    margin-top ($space-xlg + $space)
    margin-bottom ($space-text / 2)


  > h3
    font(h3, regular, primary)
    color $gray
    margin-top $space-lg
    margin-bottom ($space-text / 2)


  > h4
    font(h4, bold, primary)
    color $gray
    margin-top $space-lg
    margin-bottom ($space-text / 2)


  > h5
    font(h5, bold, primary)
    color $gray
    margin-top $space
    margin-bottom ($space-text / 3)

  > h6
    font(h6, bold, primary)
    color $gray
    margin-top $space


  > p 
    font(p1)

    &.lead
      font(h2)


  > ol
    font(p1)
    margin-top $space
    margin-bottom $space
    padding-left 2.5rem

    > li:not(:last-child)
      margin-bottom ($space-text / 2)


  > ul
    font(p1)
    margin-top $space
    margin-bottom $space
    padding-left 2.5rem

    > li:not(:last-child)
      margin-bottom ($space-text / 2)
      
  > pre
    &[class*=language-]
      margin-bottom $space-xlg
     

  .date
    font(h5, light)


  img 
    display block 
    

    
