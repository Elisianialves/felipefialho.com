//
// Scaffolding
//
// ==================================================

*
  box-sizing border-box
  
  &:before,
  &:after
    box-sizing border-box


html
  font-size responsive 8px 10px


body
  font-family(primary)
  color $text-color
  font-size $text-size
  margin 0 
  overflow-x hidden


::-moz-selection
  background $brand-primary
  color #fff

::selection
  background $brand-primary
  color #fff

