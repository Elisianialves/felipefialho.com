//
// Blog
//
// 1. Post
// 2. Article
//
// ==================================================

.blog
  lost-center ($screen-sm + (40px * 2)) $space-lg no-flex

  .content + &
    margin-top $space-xlg
    padding-top $space-lg


//
// 1. Post
// ==================================================

.blog-link
  display block

  &:not(:last-child)
    margin-bottom $space-lg


.blog-post
  border $line solid 1px
  margin-left -($space-md)
  padding $space-md
  transition border .2s
  width 'calc(100% + %s)' % ($space-md * 2)

  &:hover
  &:focus
    border-color $brand-primary


  // Types
  // ----------------------------------------------------

  .title
    font(h3, regular, secondary)
    margin-bottom $space-sm

  p
    font(p1, light)


//
// 2. Article
// ==================================================

//
// Header
// ----------------------------------------------------

.blog-header
  align-items flex-end
  background rgba($blue-light, .7)
  color #fff
  height 'calc(70vh - %s)' % $header-height
  lost-flex-container row
  overflow hidden
  padding-top $space-xlg
  padding-bottom $space-xlg
  position fixed 0

  +above('sm')
    top $header-height

  &:before
    background rgba($gray-darker, .8)
    content ''
    position absolute 0
    z-index 2

  .picture
    position absolute 0

    img
      filter: grayscale(85%)
      object-fit cover
      position absolute 0
      height 100%
      width 100%


  .content
    position relative
    z-index 3

  .date
    color #fff


//
// Inner
// ----------------------------------------------------

.blog-inner
  background #fff
  margin-top 'calc(70vh - %s)' % ($header-height * 2)
  padding-top $space-xlg
  padding-bottom $space-xlg
  position relative
  z-index 5

  .comments
    lost-center ($screen-sm + (40px * 2)) $space-lg no-flex
    margin-top $space-xlg


